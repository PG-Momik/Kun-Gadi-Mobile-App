<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/shape_circular_input_field"
        android:backgroundTint="#CAEEC2"
        android:paddingHorizontal="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:text="ID"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/route_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:text="Route No"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="right"
                android:layout_weight="1"

                />
        </LinearLayout>
        <TextView
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Path"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            />
        <LinearLayout
            android:id="@+id/split_texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Part: "
                    android:textColor="@color/Green"
                    android:gravity="left"
                    android:paddingHorizontal="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    />
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Second Part: "
                    android:textColor="@color/Darkblue"
                    android:paddingHorizontal="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:gravity="left"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/split_p1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Path"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/split_p2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Path"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="left"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/splitBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Split"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_rectangle_buttons"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/traceBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Go"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_rectangle_buttons"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>